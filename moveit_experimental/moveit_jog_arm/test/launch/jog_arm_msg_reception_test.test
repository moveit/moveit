<?xml version="1.0"?>
<launch>
  <arg name="debug" value="false" />

  <!-- Common setup for most of the integration tests -->
  <include file="$(find moveit_jog_arm)/test/launch/common_test_setup.launch" />

  <!-- Initial joint positions -->
  <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher">
    <rosparam command="load" file="$(find moveit_jog_arm)/test/config/initial_position.yaml" />
  </node>

  <param name="test_module" value="$(find moveit_jog_arm)/test/python_tests/msg_reception" />
  <test test-name="jog_arm_msg_reception_test" pkg="ros_pytest" type="ros_pytest_runner" />
</launch>
