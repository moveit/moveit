<launch>
  <!-- Load the context with the pg70 -->
  <include file="$(find moveit_resources_prbt_moveit_config)/launch/planning_context.launch" >
    <arg name="gripper" value="pg70" />
  </include>

  <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher">
    <param name="/use_gui" value="false"/>
    <rosparam param="/source_list">[/move_group/fake_controller_joint_states]</rosparam>
  </node>

  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" respawn="true" output="screen" />

  <arg name="display_plots" default="false" />
  <node if="$(arg display_plots)"
        name="plot_trajectory_msg"
        pkg="pilz_industrial_motion_planner"
        type="plot_display_trajectory_msg.py"
        args="/my_planned_path"  />

  <include ns="integrationtest_plan_components_builder" file="$(find moveit_resources_prbt_moveit_config)/launch/planning_pipeline.launch.xml">
    <arg name="pipeline" value="pilz_industrial_motion_planner" />
  </include>

  <!-- run test -->
  <test pkg="pilz_industrial_motion_planner" test-name="integrationtest_plan_components_builder" type="integrationtest_plan_components_builder">
    <param name="planning_group" value="manipulator"/>
  </test>
  <!--launch-prefix="xterm -e gdb - -args"-->

</launch>
